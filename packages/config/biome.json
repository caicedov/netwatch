{
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "complexity": "warn"
    }
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentSize": 2,
    "lineWidth": 100,
    "trailingComma": "all",
    "semicolons": "always",
    "arrowParentheses": "always"
  }
}
