{
    "$schema": "https://turborepo.dev/schema.json",
    "globalDependencies": [
        "tsconfig.json",
        ".biomerc.json",
        "pnpm-workspace.yaml"
    ],
    "tasks": {
        "build": {
            "description": "Compile TypeScript and generate build artifacts",
            "dependsOn": [
                "^build"
            ],
            "outputs": [
                "dist/**",
                ".next/**"
            ],
            "env": [
                "NODE_ENV"
            ]
        },
        "dev": {
            "description": "Start development mode (watch)",
            "cache": false,
            "persistent": true,
            "env": [
                "NODE_ENV"
            ]
        },
        "type-check": {
            "description": "Run TypeScript type checking without emitting files",
            "dependsOn": [
                "^build"
            ],
            "outputs": []
        },
        "lint": {
            "description": "Run Biome lint checks",
            "outputs": []
        },
        "lint:fix": {
            "description": "Fix lint issues with Biome",
            "cache": false
        },
        "test": {
            "description": "Run unit and integration tests",
            "dependsOn": [
                "build"
            ],
            "outputs": [
                "coverage/**"
            ]
        },
        "test:watch": {
            "description": "Run tests in watch mode",
            "cache": false,
            "persistent": true
        },
        "test:e2e": {
            "description": "Run end-to-end tests",
            "dependsOn": [
                "build"
            ],
            "cache": false,
            "env": [
                "NODE_ENV",
                "DATABASE_URL",
                "JWT_SECRET"
            ]
        }
    },
    "ui": "tui"
}