{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "description": "NetWatch game backend (NestJS modular monolith)",
  "license": "MIT",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "dev": "nest start --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate dev",
    "prisma:migrate:deploy": "prisma migrate deploy",
    "prisma:studio": "prisma studio",
    "prisma:seed": "ts-node prisma/seed.ts"
  },
  "dependencies": {
    "@nestjs/common": "11.1.11",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.11",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.11",
    "@netwatch/contracts": "workspace:*",
    "@netwatch/domain": "workspace:*",
    "@prisma/adapter-pg": "7.3.0",
    "@prisma/client": "7.3.0",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^17.2.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "8.17.2",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.11",
    "@netwatch/tsconfig": "workspace:*",
    "@types/jest": "29.5.8",
    "@types/node": "22.19.3",
    "@types/pg": "8.16.0",
    "jest": "29.7.0",
    "prisma": "7.3.0",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  }
}