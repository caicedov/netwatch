{
  "name": "backend",
  "version": "0.1.0",
  "private": true,
  "description": "NetWatch game backend (NestJS modular monolith)",
  "license": "MIT",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "start": "node dist/main.js",
    "dev": "nest start --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "biome lint src/",
    "lint:fix": "biome lint src/ --fix",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage",
    "typeorm": "typeorm-ts-node-commonjs",
    "migration:run": "pnpm typeorm migration:run -d ./src/infrastructure/database/data-source.ts",
    "migration:revert": "pnpm typeorm migration:revert -d ./src/infrastructure/database/data-source.ts",
    "migration:show": "pnpm typeorm migration:show -d ./src/infrastructure/database/data-source.ts",
    "migration:create": "pnpm typeorm migration:create",
    "migration:new": "node ./scripts/create-migration.js"
  },
  "dependencies": {
    "@nestjs/common": "11.1.11",
    "@nestjs/config": "4.0.2",
    "@nestjs/core": "11.1.11",
    "@nestjs/jwt": "11.0.2",
    "@nestjs/passport": "11.0.5",
    "@nestjs/platform-express": "11.1.11",
    "@nestjs/typeorm": "11.0.0",
    "@netwatch/contracts": "workspace:*",
    "@netwatch/domain": "workspace:*",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.0",
    "dotenv": "^17.2.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "pg": "8.17.0",
    "reflect-metadata": "0.2.2",
    "rxjs": "7.8.2",
    "typeorm": "0.3.28",
    "uuid": "^9.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "11.0.14",
    "@nestjs/schematics": "11.0.9",
    "@nestjs/testing": "11.1.11",
    "@netwatch/tsconfig": "workspace:*",
    "@types/jest": "29.5.8",
    "@types/node": "22.19.3",
    "jest": "29.7.0",
    "ts-jest": "29.4.6",
    "ts-loader": "9.5.4",
    "ts-node": "10.9.2",
    "typescript": "5.5.4"
  }
}